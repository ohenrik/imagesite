		    		<div class="form-group">
				    	<%= text_field_tag :email, nil, class: "form-control", placeholder: "my@email.com"%> 
				    	<p class="help-block">Ps. your email is safe with us.</p>
			    	</div>
		    	</div>
		    	<div class="col-sm-2 col-lg-2">
			    	<div class="form-group">
				    	<button class="btn btn-default btn-block" type="submit">Update me.</button>
				    </div><!-- /input-group -->

			    </div>
		    <% end %>
		</div><!-- /.row -->
		<br>
	</div>
</div>

