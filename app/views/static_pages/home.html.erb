<% content_for :front_page do %>
<div class="jumbatron">
	<div class="container">
		<div class="message-space">
			<h1 class="primary-message"><span class="text-no-wrap">Let's work together.</span></h1>
			<h2 class="secondary-message">
				We take care of your website, so you can do what you do best
			</h2>


		</div>
	</div>
</div>

<div class="container">
	<div class="row">
