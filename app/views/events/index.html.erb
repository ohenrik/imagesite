<div class="row pages">
    <div class="col-xs-12 new-link">
        <div class="pull-right">
            <%= link_to new_production_path, class: "btn btn-default" do %>
                <i class="fa fa-bullhorn"></i> New Production
            <% end %>
            <%= link_to new_event_path, class: "btn btn-default" do %>
                <i class="fa fa-ticket"></i> New Event
            <% end %>
        </div>
    </div>
    <% @events.group_by(&:production).each do |production, events| %>
        <div class="col-xs-12">
            <div class="page-header">
                <h1><%= production.present? ? production.name : "Independent events" %></h1>
            </div>
        </div>
        <% events.each do |event| %>
            <%= render 'event', event: event %>
        <% end %>
    <% end %>

    <% if @events.empty? %>
        <div class="col-xs-12">
            <%= link_to new_event_path do %>
                <div class="alert alert-info">
                    <p>
                        <strong>No events created: </strong>To create a new event click here.
                    </p>
                </div>
            <% end %>
        </div>
    <% end %>
</div>