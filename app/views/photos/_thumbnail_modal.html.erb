<div class="modal-content">

	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4 class="modal-title" id="myModalLabel">Select Thumbnail</h4> 
	</div>

	<div class="modal-body">

	<div class="gallery-photo">
		<div class="row">
			<% @photos.each do |photo| %>
				<div class="thumb col-xs-6 col-md-4">
					<%= link_to set_thumbnail_path(photo, item: @item, item_id: @item_id), method: :post, class: "thumbnail" do %>
						<%= image_tag photo.image_url(:large_thumb), class: "img-responsive" %>
					<% end %>
					<span class="photo-name"><%= photo.name %></span>
				</div>
			<% end %>
		</div>
	</div>

	</div>

	<div class="modal-footer">
		<%= link_to "Remove thumbnail", remove_thumbnail_path(item: @item, item_id: @item_id), method: :post, class: "btn btn-default"%>
		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	</div>
  

</div><!-- /.modal-content -->
