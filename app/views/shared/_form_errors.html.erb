<% if item.errors.any? %>

<div class="panel panel-danger">
	<div class="panel-heading">
  		<h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %></h3>
	</div>
	<div class="panel-body">
		<ul class="form-errors <%= item.class.name.downcase %>-form-errors">
			<% item.errors.full_messages.each do |error_message| %>
				<li>
					<%= error_message %>
				</li>
			<% end %>
		</ul>
	</div>
</div>
<% end %>