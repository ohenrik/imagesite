<%= form_tag sessions_path do %>
<div class="row buffer">
	<div class="col-xs-8 col-xs-offset-2  col-sm-6 col-sm-offset-3  col-lg-4 col-lg-offset-4">
		<div class="">
			<div class="form-group">
			<%= label_tag :username, "Username:" %><br>
			<%= text_field_tag :username, params[:username], class: "form-control" %>
			</div>
			<div class="form-group">
			<%= label_tag :password, "Password:" %><br>
			<%= password_field_tag :password, "", class: "form-control" %>
			</div>
			<div class="form-group">
			<%= check_box_tag :remember_me, 1, params[:remember_me], class: "remember-me-checkbox" %>
			<%= label_tag :remember_me, "Remember me", class: "remember-me-label" %>
			<%= submit_tag "Log in", class: "btn btn-primary pull-right"  %>
			</div>

			<div class="clearfix password-reset-link">
				<%= link_to "Whoops! Forgot your password?", new_password_reset_path %>
			</div>
		</div>
	</div>
</div>


<% end %>