<div class="modal-header" >
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">New Theme</h4>
</div>

    <%= form_for(@theme) do |f| %>
      <div class="modal-body" >
        <div class="error-container">
          <%= render partial: 'shared/form_errors', :locals => {:item => @theme} %>
        </div>
      

        <div class="theme">
          <% if !@theme.new_record? %>
              <%= image_tag theme_preview_image(@theme), class: "img-responsive thumbnail", size: "480x270" %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :name, "Theme name"%>
          <%= f.text_field :name, placeholder: "Theme name", class: "form-control" %>
        </div>
      

      </div>

      <div class="modal-footer">

        <% if @theme.new_record? %>
          <%= f.submit "Upload theme", class: "btn btn-primary" %>
        <% else %>
          <%= f.submit "Save changes", class: "btn btn-primary" %>
          <%= link_to 'Delete theme', @theme, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        <% end %>

        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>

        
    <% end %>

